			<div class="Cad_item_box">
				<%if !current_user%>
					<%= f.hidden_field :reseller_id, :value => $revenda_id %>
				<%end%>
					
					<%= f.label :name, raw('Nome <br /> Completo') %>
				<div class="Login_input">
					<%= image_tag("img_detal_cnpj.png", :class=>"Img_line_align") %>
					<%= f.text_field :name %>
				</div>
			</div>

